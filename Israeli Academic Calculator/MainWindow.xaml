<Window x:Class="Israeli_Academic_Calculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Israeli_Academic_Calculator"
        mc:Ignorable="d"
        xmlns:UserControls="clr-namespace:Israeli_Academic_Calculator.view.UserControls"
        Title="MainWindow" Height="450" Width="700">
       
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.07*"/>
            <RowDefinition Height="0.83*"/>
            
        </Grid.RowDefinitions>

        <Rectangle Fill="MediumPurple" /> <!--menu bar-->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions><!--Content-->
                <ColumnDefinition Width="0.5*"/>
                <ColumnDefinition Width="0.5*"/>
            </Grid.ColumnDefinitions>
            
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <UserControls:DataEntryBox Grid.Row="0" Width="250" Height="40" Placeholder="Name of course"/>
                <UserControls:DataEntryBox Grid.Row="1" Width="250" Height="40" Placeholder="Score of course"/>
                <UserControls:DataEntryBox Grid.Row="2" Width="250" Height="40" Placeholder="Nakaz of course"/>
                <CheckBox Grid.Row="3" Content="Apply Binary-pass" Width="120" Height="20"  VerticalAlignment="Center" HorizontalAlignment="Center" />
                <Button Grid.Row="4" x:Name="Add_btn" Width="100" Height="40" Content="Add course" Click="Add_btn_Click" VerticalAlignment="Center" HorizontalAlignment="Center"/>


            </Grid>
        </Grid>
        
    </Grid>
</Window>
